<body class="country-page">
<img class="country-page-title" src="<%= @country.picture() %>" alt="">
<h1 class="header"><%= @country.name %></h1>
<hr>

<br>

<div id="city-wrapper">
  <% @city.each do |city| %>

  <div class="city" style="order: <%= city.id %>;">
    <a class="no-click" href=""><h1 style="background-image: url('<%= city.picture %>');
    background-position: center;
    background-size: cover;
    background-repeat: no-repeat;
    padding: 10%;
    text-shadow: -1px -1px 0 grey, 1px -1px 0 grey, -1px 1px 0 grey, 1px 1px 0 grey;
    opacity: 0.5;
    "><%= city.name %></h1></a>
    <br>


    <% if (city.visited == "f") %>
      <form action="/update_city_without_pic/<%= true %>/<%= city.country_id %>/<%= city.id %>" method="post">
        <input class="toggle toggle--notvisited" type="submit" value="Not Been Yet">
      </form>
    <% else %>
      <form action="/update_city_without_pic/<%= false %>/<%= city.country_id %>/<%= city.id %>" method="post">
        <input class="toggle toggle--visited" type="submit" value="Visited!">
      </form>
    <% end %>
    <br>
    <br>
    <br>

    <form action="/edit-city/<%=city.id%>" method="get">
      <button class="editicon" type="submit" value="Edit City">
      </button>
    </form>

    <form action="/delete-city/<%=city.id%>" method="post">
      <button class="trashicon" type="submit" value="Delete City">
        </button>
    </form>
    </div>
    <% end %>
  </div>

<div class="country-buttons-bar">
  <% if (@country.visited == "f") %>
    <form action="/update_without_pic/<%= true %>/<%= @country.id %>" method="post">
      <input type="submit" value="Not Been Yet">
    </form>
  <% else %>
    <form action="/update_without_pic/<%= false %>/<%= @country.id %>" method="post">
      <input type="submit" value="Visited!">
    </form>
  <% end %>

<form action="/edit/<%=@country.id%>" method="get">
  <input type="submit" value="Add Picture/Edit Country"/>
</form>

<form action="/delete-country/<%=@country.id%>" method="post">
  <input type="submit" value="Remove Country"/>
</form>

</div>

</body>
