<h2>Edit <%= @country.name %></h2>
<form action="/edit/<%= @country.id %>" method="post">
  <div>
    <label for="name">Name: </label>
    <input type="text" name="name" id="name" value="<%= @country.name %>"/>
  </div>

  <div>
    <label for="visited">Have you been yet?</label>
    <input type="radio" name="visited" value="true">Yes<br>
    <input type="radio" name="visited" value="false">No<br>
  </div>

  <div>
    <input type="submit" value="Update Country"/>
  </div>
  
</form>
