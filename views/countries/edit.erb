<body class="body-forms">
<h1 class="header">Edit Country</h1>
<h4 class="sub-title">~ Make changes to <%= @country.name %> ~</h4>
<hr>
<br>
<div class="form-wrapper">


<form action="/edit/<%= @country.id %>" method="post">
  <div>
    <label for="name">Name: </label>
    <input type="text" name="name" id="name" value="<%= @country.name %>"/>
  </div>

  <div>
    <label for="visited">Have you been yet?</label>
    <input type="radio" name="visited" value="true">Yes</input>
    <input type="radio" name="visited" value="false">No</input>
    <br>
    <br>
  </div>

  <div>
    <label for="picture">Enter picture URL for <%= @country.name %> (Landscape will work best) </label>
    <br>
    <input type="text" name="picture" value="<%=@country.picture%>"/>
  </div>

  <div>
    <input type="submit" value="Apply Changes to <%= @country.name %>"/>
  </div>

</form>
</div>
