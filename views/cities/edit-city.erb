<h2>Edit <%= @city.name %></h2>
<form action="/edit-city/<%= @city.id %>" method="post">

  <input name='country_id' type='hidden' value='<%= @city.find_country.id %>'>

  <div>
    <label for="name">Name: </label>
    <input type="text" name="name" id="name" value="<%= @city.name %>"/>
  </div>

  <div>
    <label for="visited">Have you been yet?</label>
    <input type="radio" name="visited" value="true">Yes<br>
    <input type="radio" name="visited" value="false">No<br>
  </div>

  <div>
    <input type="submit" value="Update City"/>
  </div>

</form>
