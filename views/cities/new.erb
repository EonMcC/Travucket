<body class="body-forms">
<h1 class="header">Add New City</h1>
<h4 class="sub-title">~ Enter a city to visit in <%= @country.name %> ~</h4>
<hr>
<br>
<div class="form-wrapper">

<form action="/add-city" method="post">

  <input name='country_id' type='hidden' value='<%= @country.id %>'>

  <div>
    <label for="name">City Name:</label>
    <input type="text" name="name"/>
  </div>

  <div>
    <label for="visited">Have you been yet?</label>
    <input type="radio" name="visited" value="true">Yes</input>
    <input type="radio" name="visited" value="false">No</input>
    <br>
    <br>
  </div>

  <div>
    <input type="submit" value="Accept New City Details"/>
  </div>


</form>
